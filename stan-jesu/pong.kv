#:kivy 2.3.0

<tablita>:
    name: Pedro
    last_name: pEdro
    food: peDro
    GridLayout:
        cols: 1
        size:root.width,root.height
        
        GridLayout:
            cols: 2

            Label:
                text :"Name"
            TextInput:
                id: Pedro

                multiline: True

            Label:
                text :"Favorite Game"
            TextInput:
                id:pEdro
                multiline: True
            
            Label:
                text :"Favorite Color"
            TextInput:
                id: peDro
                multiline: True

        Button:
            size_hint: None,None
            width: root.width
            text: "Submit"
            on_press: root.press()